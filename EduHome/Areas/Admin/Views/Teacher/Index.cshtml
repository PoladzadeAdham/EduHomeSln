@model List<TeacherGetVm>

<table class="table">
    <thead>
        <a asp-action="Create" asp-controller="Teacher" class="btn btn-success">Create</a>

        <tr>
            <th scope="col">Id</th>
            <th scope="col">Fullname</th>
            <th scope="col">Profession</th>
            <th scope="col">Image</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var teacher in Model)
        {
            <tr>
                <th scope="row">@teacher.Id</th>
                <td>@teacher.FullName</td>
                <td>@teacher.Profession</td>
                <td>
                    <img src="~/img/teacher/@teacher.ImagePath" />
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@teacher.Id" class="btn btn-warning"> Update</a>
                    <a asp-action="Delete" asp-route-id ="@teacher.Id" class="btn btn-danger"> Delete</a>

                </td>

            </tr>
        }

       
        
    </tbody>
</table>
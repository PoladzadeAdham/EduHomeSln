@model RegisterVm

<div class="container">
    <div class="row">
        <form method="post">
            <div class="form-group">
                <label for="UserName"></label>
                <input asp-for="UserName" class="form-control" placeholder="Enter UserName">
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>

            <div class="form-group">
                <label for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter Email">
                <span class="text-danger" asp-validation-for="Email" ></span>
            </div>

            <div class="form-group">
                <label for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="Enter Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="form-group">
                <label for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Enter ConfirmPassword">
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>


            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>

</div>



